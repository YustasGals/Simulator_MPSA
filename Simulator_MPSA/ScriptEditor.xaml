<Window x:Class="Simulator_MPSA.ScriptEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simulator_MPSA"
        mc:Ignorable="d"
        Title="Редактирование скрипта" Height="300" Width="378.178">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" MinHeight="240"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="Editor" Margin="5,5,10,10" Grid.Row="0" TextWrapping="Wrap" AcceptsReturn="true" FontFamily="Consolas" FontSize="14"/>
        <Button x:Name="ButtonApply" Content="Закрыть" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Bottom" Width="75" Height="20" Margin="0,5,10,5" Click="On_ButtonClose"/>
        <Button x:Name="ButtonClose" Content="Применить" HorizontalAlignment="Right"  Grid.Row="1" VerticalAlignment="Bottom" Width="75" Height="20" Margin="127,5,95,5" Click="On_ButtonApply"/>

    </Grid>
</Window>
