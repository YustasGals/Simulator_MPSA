<Window x:Class="Simulator_MPSA.ScriptEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simulator_MPSA"
        mc:Ignorable="d"
        Title="Редактирование скрипта" Height="273.102" Width="886.11" SizeToContent="Manual">
    <Grid Margin="0,0,0,0" RenderTransformOrigin="0.5,0.5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <TextBox x:Name="Editor" Margin="5,5,10,10" Grid.Row="0" TextWrapping="Wrap" AcceptsReturn="true" FontFamily="Consolas" FontSize="14" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="ButtonApply" Content="Закрыть" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Height="24" Margin="0,0,10,5" Click="On_ButtonClose" Grid.Row="1"/>
        <Button x:Name="ButtonClose" Content="Применить" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Width="75" Height="24" Margin="0,0,90,5" Click="On_ButtonApply" Grid.Row="1"/>

    </Grid>
</Window>
