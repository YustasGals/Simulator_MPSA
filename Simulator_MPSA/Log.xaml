<Window x:Class="Simulator_MPSA.Log"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simulator_MPSA"
        mc:Ignorable="d"
        Title="Журнал событий" Height="300" Width="544">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ToolBar Grid.Row="0" Grid.ColumnSpan="2">
            <Button x:Name="btnLog" Click="btnClear_Click" ToolTip="Очистить лог" IsEnabled="True">
                <Image Source="IMG/clear.png" AutomationProperties.HelpText="Стоп" />
            </Button>
            <Button x:Name="btnTopmost" Click="btnTopmost_Click" ToolTip="Поверх окон" IsEnabled="True">
                <Image Source="IMG/pin.png" AutomationProperties.HelpText="Стоп" />
            </Button>
            
        </ToolBar>
        <TextBox x:Name="TextBox_log" Margin="10,5,10,10" Grid.Row="1" TextWrapping="Wrap" Text="{Binding LogText}" VerticalScrollBarVisibility="Visible" TextChanged="TextBox_TextChanged"/>
    </Grid>
</Window>
