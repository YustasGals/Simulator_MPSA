<Window x:Class="Simulator_MPSA.SetupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simulator_MPSA"
        mc:Ignorable="d"
        Title="Настройка вспомсистемы" Height="300" Width="487.5">
    <Grid>
        <DataGrid x:Name="dataGrid" Margin="10,97,10,37" ItemsSource="{Binding Items}" AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Индекс в таблице" Binding="{Binding Index}"/>
                <DataGridCheckBoxColumn Header="Аналоговый" Binding="{Binding IsAnalog}"/>
                <DataGridTextColumn Header="Значение аналогового" Binding="{Binding ActivationValue}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="button_OK" Content="OK" Margin="0,0,79,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="55" Click="button_OK_Click"/>
        <Button x:Name="button_cancel" Content="Cancel" Margin="0,0,10,10" VerticalAlignment="Bottom" IsCancel="True" HorizontalAlignment="Right" Width="64" Click="button_cancel_Click"/>
        <Label Content="Наименование" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="30" Width="99"/>
        <TextBox x:Name="textBox_name" Text="{Binding Path =VSName }"  HorizontalAlignment="Left" Height="23" Margin="114,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Группа" HorizontalAlignment="Left" Margin="10,39,0,0" VerticalAlignment="Top" Width="99"/>
        <TextBox x:Name="textBox_group"  Text="{Binding Path = VSGroup}" HorizontalAlignment="Left" Height="23" Margin="114,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.558,0.525"/>
        <Label Content="Настройка выходов:" HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
